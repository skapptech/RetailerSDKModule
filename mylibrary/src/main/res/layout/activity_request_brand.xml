<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_request_brand"
            layout="@layout/toolbar_arrow" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size15"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="@dimen/size5">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size26">


                <TextView
                    android:id="@+id/text"
                    style="@style/CommonStyleSR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_padding_10"
                    android:layout_marginTop="@dimen/size15"
                    android:layout_marginEnd="@dimen/view_padding_10"
                    android:gravity="center"
                    android:text="@string/title_requestbrand"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp"
                    />

                <EditText
                    android:id="@+id/brand_name"
                    style="@style/CommonStyleSR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rectangle"
                    android:hint="@string/enetrbrandname"
                    android:maxLines="15"
                    android:padding="7dp"
                    android:textSize="18sp"
                    android:autofillHints="" />

                <Button
                    android:id="@+id/submit"
                    style="@style/CommonStyleSR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/size26"
                    android:background="@drawable/solidrectangle"
                    android:text="@string/submit_requestbrand"
                    android:textColor="@color/White"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>