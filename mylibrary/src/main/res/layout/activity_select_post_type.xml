<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".community.SelectPostTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white1">

        <include
            android:id="@+id/toolbarPost"
            layout="@layout/toolbar_post" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="@dimen/size16">

            <LinearLayout
                android:id="@+id/liPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/community_tv_title_dark_blue_grey"
                    android:textSize="@dimen/text_size_15sp"
                    android:text="पोस्ट करे" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size16"
                    android:gravity="center"
                    android:textColor="@color/community_tv_content_mountain_mist"
                    android:text="अपने विचारो को व्यापारियों भाइयों के साथ साझा करना चाहते है तो, यहां क्लिक करे |" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="@dimen/size16"
            android:layout_marginHorizontal="@dimen/size16">
            <LinearLayout
                android:id="@+id/liQues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/community_tv_title_dark_blue_grey"
                    android:textSize="@dimen/text_size_15sp"
                    android:text="व्यापारियों भाइयों से प्रश्न पूछे" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size16"
                    android:gravity="center"
                    android:textColor="@color/community_tv_content_mountain_mist"
                    android:text="अगर आप व्यापारियों भाइयों से कुछ प्रश्न पूछना चाहते है तो यहां क्लिक करे|" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>