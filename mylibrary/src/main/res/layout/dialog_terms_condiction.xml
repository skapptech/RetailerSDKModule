<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_terms"
            style="@style/CommonStyleB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_padding_20"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/rl_cb_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_terms"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_tems_and_condiction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvTermsOfUse"
                style="@style/CommonStyleSR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_use"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_termsstring"
            style="@style/CommonStyleSR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_cb_terms"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="@dimen/layout_20dp_padding"
            android:text=""
            android:textColor="@color/Darkgrey" />

        <Button
            android:id="@+id/bt_terms_and_condiction"
            style="@style/CommonStyleB"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_termsstring"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/drawable_button_corner"
            android:maxLines="1"
            android:paddingLeft="@dimen/layout_30dp_padding"
            android:paddingRight="@dimen/layout_30dp_padding"
            android:text="@string/accept_and_continue"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cancel"
            style="@style/CommonStyleB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_terms_and_condiction"
            android:gravity="center"
            android:padding="@dimen/layout_10dp_padding"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>