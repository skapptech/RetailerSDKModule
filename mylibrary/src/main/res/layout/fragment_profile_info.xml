<ScrollView android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size5"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cust_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/txt_cust_name"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size5"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cust_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/txt_cust_email"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustDob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size5"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cust_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="@string/txt_cust_dob"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustAnni"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size5"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cust_anni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="@string/txt_cust_anniversary_date"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustContact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size5"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cust_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/txt_cust_contact_number"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|start">

                <CheckBox
                    android:id="@+id/cb_check_same_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_c_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_check_whatsapp"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size5"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cust_whatsapp_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/txt_cust_whatsApp_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCustSAdd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size64"
                        android:paddingTop="@dimen/size5"
                        android:textColorHint="@color/Darkgrey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_cust_shipping_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="@string/txt_cust_shipping_address"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="6dp"
                            android:textColor="@color/Black"
                            android:textColorHighlight="@color/Darkgrey"
                            android:textColorHint="@color/Darkgrey" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_photo"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/dotted_border"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_map_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_map_pin" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LLBillingAdd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|start">

                <CheckBox
                    android:id="@+id/cb_check_same_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_cb_check_same_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_check_shiping_address"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCustBAdd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size64"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/white_rectangle_box"
                        android:paddingTop="@dimen/size4"
                        android:textColorHint="@color/Darkgrey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_cust_billing_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="@string/txt_cust_billing_address"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="6dp"
                            android:textColor="@color/Black"
                            android:textColorHighlight="@color/Darkgrey"
                            android:textColorHint="@color/Darkgrey" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/dotted_border"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imBillingAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_map_pin" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPanNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size4"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etpanNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/pannumber"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAadharNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size64"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_box"
                android:paddingTop="@dimen/size4"
                android:textColorHint="@color/Darkgrey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAadharNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/aadhar_number"
                    android:inputType="number"
                    android:maxLength="12"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/Black"
                    android:textColorHighlight="@color/Darkgrey"
                    android:textColorHint="@color/Darkgrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/drawable_corner_udhar"
                android:minWidth="180dp"
                android:text="@string/txt_cust_Save"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>