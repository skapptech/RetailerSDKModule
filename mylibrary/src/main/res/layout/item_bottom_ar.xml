<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingTop="2dp"
    android:paddingEnd="8dp"
    android:paddingBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/star_6" />

        <LinearLayout
            android:id="@+id/liRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="9dp"
            android:paddingEnd="9dp">

            <TextView
                android:id="@+id/tvPleaseRateH"
                style="@style/CommonStyleSB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_rate_sales_person_bottom"
                android:textColor="@color/tertiary_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvName"
                style="@style/CommonStyleSR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:text="Delivery boy name"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:text="Rate"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_close_button" />
    </LinearLayout>
