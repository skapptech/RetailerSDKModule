<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10">

        <ImageView
            android:id="@+id/tv_contect"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/profile_round" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/CommonStyleSR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginLeft="@dimen/size20"
            android:layout_toRightOf="@+id/tv_contect"
            android:gravity="center"
            android:text="Bhagwan"
            android:textColor="@color/black"
            android:textSize="@dimen/size16" />

        <TextView
            android:id="@+id/tv_user_number"
            style="@style/CommonStyleSR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginTop="@dimen/size2"
            android:layout_toRightOf="@+id/tv_contect"
            android:gravity="center"
            android:text="8959311437"
            android:textColor="@color/dark_grey_blue"
            android:textSize="@dimen/size12" />


    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="@dimen/size20"
            android:background="@color/dark_grey" />

    </LinearLayout>



</layout>