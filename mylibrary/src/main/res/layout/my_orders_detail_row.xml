<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/row_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="2dp"
                android:elevation="@dimen/size10"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/item_pics"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/logo_grey" />

                    <TextView
                        android:id="@+id/my_order_Detail_item_name"
                        style="@style/CommonStyleSR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/item_pics"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:maxLines="2"
                        android:text="Item Name: "
                        android:textColor="@color/Black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_order_detail_quantity"
                        style="@style/CommonStyleSR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_order_Detail_item_name"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/item_pics"
                        android:layout_weight="5"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="Amount: "
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_order_detail_price"
                        style="@style/CommonStyleSR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_order_detail_quantity"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/item_pics"
                        android:layout_weight="4"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text=" "
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

</layout>