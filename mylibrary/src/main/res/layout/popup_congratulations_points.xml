<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rounded_corners"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:maxHeight="200dp"
            android:src="@drawable/group861" />

        <TextView
            android:id="@+id/tv_winpoints"
            style="@style/CommonStyleB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/you_have_won_points"
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/continueBtn"
            style="@style/CommonStyleB"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size32"
            android:layout_marginTop="@dimen/size26"
            android:layout_marginBottom="@dimen/size15"
            android:background="@drawable/circle"
            android:text="@string/txt_Continue"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>